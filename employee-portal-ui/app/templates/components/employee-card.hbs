{{#link-to 'employee' employee}}
  {{#paper-card as |card|}}
    <img src={{employee.image}} alt="employee" class="image--cover">
    {{#card.title as |title|}}
      {{#title.text as |text|}}
          {{#text.headline}}{{employee.firstName}} {{employee.middleName}} {{employee.lastName}}{{/text.headline}}
          {{#text.subhead}}{{employee.role}}{{/text.subhead}}
          {{#text.subhead}}{{employee.phoneNumber}}{{/text.subhead}}
      {{/title.text}}
    {{/card.title}}
  {{/paper-card}}
{{/link-to}}